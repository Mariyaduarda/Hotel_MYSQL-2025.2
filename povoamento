TRUNCATE TABLE quarto_luxo;
TRUNCATE TABLE reserva;
TRUNCATE TABLE quarto;
TRUNCATE TABLE funcionario;
TRUNCATE TABLE hospede;
TRUNCATE TABLE pessoa;
TRUNCATE TABLE endereco;
TRUNCATE TABLE item;
SET FOREIGN_KEY_CHECKS=1;

