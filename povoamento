-- ========================================
-- VERIFICAÇÃO DOS DADOS INSERIDOS
-- ========================================
SELECT 'ENDERECOS' AS Tabela, COUNT(*) AS Total FROM endereco
UNION ALL
SELECT 'PESSOAS', COUNT(*) FROM pessoa
UNION ALL
SELECT 'HOSPEDES', COUNT(*) FROM hospede
UNION ALL
SELECT 'FUNCIONARIOS', COUNT(*) FROM funcionario
UNION ALL
SELECT 'QUARTOS', COUNT(*) FROM quarto
UNION ALL
SELECT 'QUARTOS LUXO', COUNT(*) FROM quarto_luxo
UNION ALL
SELECT 'RESERVAS', COUNT(*) FROM reserva
UNION ALL
SELECT 'ITENS', COUNT(*) FROM item
UNION ALL
SELECT 'CONSUMOS', COUNT(*) FROM consumo
UNION ALL
SELECT 'ITENS CONSUMIDOS', COUNT(*) FROM item_has_consumo
UNION ALL
SELECT 'PAGAMENTOS', COUNT(*) FROM pagamento;